{% for item in speaker %}

{% set counter = ( counter | default(0) ) + 1 %}

<div class="card">

	<div class="card-body">

		{% if item.speaker_image %}

	  		<img src="{{Image(item.speaker_image).src|resize(500, 500, 'center') }}" alt="" class="rounded-circle w-100 mx-auto">

		{% else %}

	  		<img src="{{ theme.link }}/img/profile.png" alt="" class="rounded-circle w-100 mx-auto">

		{% endif %}


		{% if item.lecturer_type %}
		{% endif %}

		<a href="#0" data-toggle="modal" data-target="#exampleModalLong{{ counter }}"><h2 class="card-title my-3 text-center">{{ item.post_title }}</h2></a>
		<span class="badge badge-primary badge-pill">{{ item.lecturer_type }}</span>

		<h6 class="text-center">{{ item.job_title }}</h6>

