<div id="principles">

    <span>

        <div class="container">

            <h2 class="text-center text-capitalize mt-5 mb-0">{{ principalstitle }}</h2>

            <h5 class="text-center text-capitalize mb-3">{{ principalssubtitle }}</h5>

            {{ principalsintro }}

            <div id="accordion" role="tablist">

                {% for item in principalsrepeater %}

                {% set counter = ( counter | default(0) ) + 1 %}

                <div class="card">

                    <a data-toggle="collapse" href="#collapse{{ counter }}" aria-expanded="false" aria-controls="collapse{{ counter }}">

                        <div class="card-header" role="tab" id="heading{{ counter }}">

                            <h5 class="mb-0">

                                {{ item.title }}

                            </h5>

                            <span class="chevron bottom accordian"></span>

                        </div>

                    </a>

                    <div id="collapse{{ counter }}" class="collapse" role="tabpanel" aria-labelledby="heading{{ counter }}" data-parent="#accordion">

                        <div class="card-body lead">

                            {{ item.copy }}

                        </div>

                    </div>

                </div>

                {% endfor %}

            </div>

        </div>

    </span>

</div>