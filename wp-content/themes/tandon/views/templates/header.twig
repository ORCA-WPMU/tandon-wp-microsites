    <div class="site-title">

        <a href="{{ site.link }}">

            <h1 class="d-none d-sm-none d-md-none d-lg-none d-xl-inline">

                <span>{{ site.title }}</span>

            </h1>

        </a>

        {% include 'templates/hamburger.twig' %}

    </div>

    <div class="logo">

        <a href="http://engineering.nyu.edu"><img src="{{ theme.link }}/img/logo.png" alt="" class="w-100" targer="_blank"></a>

    </div>

</header>

