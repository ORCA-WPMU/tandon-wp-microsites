<div id="hero">

        {% if (herotrue == 'true') and (fullheight == "false") %}

        <div class="hero d-flex ">

        {% else %}

        <div class="hero half d-flex ">

        {% endif %}

        <div class="hero-block">

            <div class="align-items-center d-xs-none d-sm-none d-md-flex d-lg-flex d-xl-flex">

            	<div class="container">

                    <div class="text-right">

                        {% if herotitle %}
                        <h1>
                            {{ herotitle|striptags('<p><br>') }}
                        </h1>
                        {% endif %}

                    </div>

                </div>

            </div>

        </div>

        {% if (herotrue == 'true') and (fullheight == "false") %}

        <img class="w-100" src="{{ Image(heroimage).src }}" alt="">

        {% else %}

        <img class="w-100 half" src="{{ Image(heroimage).src }}" alt="">

        {% endif %}

        {% if alert %}

        <div class="event-details">

            <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">

              {{ alert|striptags }}

              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>

            </div>

        </div>

        {% endif %}

    </div>

</div>

