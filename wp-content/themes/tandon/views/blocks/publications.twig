<div id="publicationa">

    <div class="container">

        {% include 'partial/block-title.twig' %}

        {% include 'partial/block-intro.twig' %}

        <div class="content-block">

            {% for tax in block.publication_type %}

                {% for item in tax.taxonomy %}

                    {% if item.name == 'Conferences' %}

                        <div class="jumbotron">

                        <h4 class="mt-0 mb-4 d-inline-block">{{ item.name }}</h4>

                        {% if conferenceposts|length > 5 %}

                            <a href="{{ site.link }}/category/{{item.name|sanitize}}" class="show-all float-right">
                                <h4><i class="fa fa-list-ul" aria-hidden="true"></i> See All</h4>
                            </a>

                        {% endif %}

                        {% if conferenceposts %}

                        <div class="show-more">

                            <ul class="list">

                            {% for post in conferenceposts|slice(0, 5) %}

                                {% if tax.single_post == 'false' %}

                                <li><a href="{{ post.link }}">{{ post.name }}</a></li>

                                {% else %}

                                <li>{{ post.content|striptags('<a>') }}</li>

                                {% endif %}

                                {% if loop.last %}{% else %}<hr class="my-3">{% endif %}

                            {% endfor %}

                            {% if conferenceposts|length > 5 %}

                                <div class="showmore">

                                {% for post in conferenceposts|slice(5, 20) %}

                                    {% if loop.first %}<hr class="my-3">{% else %}{% endif %}

                                        {% if tax.single_post == 'false' %}

                                        <li><a href="{{ post.link }}">{{ post.name }}</a></li>

                                        {% else %}

                                        <li>{{ post.content|striptags('<a>') }}</li>

                                        {% endif %}

                                    {% if loop.last %}{% else %}<hr class="my-3">{% endif %}

                                {% endfor %}

                                </div>

                                <div class="float-left">

                                    <a href="#0" class="show-more fa">
                                      <i class="fa fa-chevron-down" aria-hidden="true"></i><span>Show More</span>
                                    </a>

                                </div>

                            {% endif %}

                            </ul>

                        </div>

                        {% endif %}

                        </div>

                    {% endif %}

                    {% if item.name == 'Journals' %}

                    <div class="jumbotron">

                        <h4 class="mt-0 mb-4 d-inline-block">{{ item.name }}</h4>

                        {% if journalposts|length > 5 %}

                            <a href="{{ site.link }}/category/{{item.name|sanitize}}" class="show-all float-right">
                                <h4><i class="fa fa-list-ul" aria-hidden="true"></i> See All</h4>
                            </a>

                        {% endif %}

                        {% if journalposts %}

                        <div class="show-more">

                            <ul class="list">

                            {% for post in journalposts|slice(0, 5) %}

                                {% if tax.single_post == 'false' %}

                                <li><a href="{{ post.link }}">{{ post.name }}</a></li>

                                {% else %}

                                <li>{{ post.content|striptags('<a>') }}</li>

                                {% endif %}

                                {% if loop.last %}{% else %}<hr class="my-3">{% endif %}

                            {% endfor %}

                            {% if journalposts|length > 5 %}

                                <div class="showmore">

                                {% for post in journalposts|slice(5, 20) %}

                                    {% if loop.first %}<hr class="my-3">{% else %}{% endif %}

                                        {% if tax.single_post == 'false' %}

                                        <li><a href="{{ post.link }}">{{ post.name }}</a></li>

                                        {% else %}

                                        <li>{{ post.content|striptags('<a>') }}</li>

                                        {% endif %}

                                    {% if loop.last %}{% else %}<hr class="my-3">{% endif %}

                                {% endfor %}

                                </div>

                                <div class="float-left">

                                    <a href="#0" class="show-more fa">
                                      <i class="fa fa-chevron-down" aria-hidden="true"></i><span>Show More</span>
                                    </a>

                                </div>

                            {% endif %}

                            </ul>

                        </div>

                        {% endif %}

                    </div>

                    {% endif %}

                {% endfor %}

            {% endfor %}


            <!-- ///// dumps all categories and their posts ////// -->

            {#% for item in taxpost %}

                {% if item.name == 'Uncategorized' or item.name == 'Primary' %}

                {% else %}

                <h4>{{ item.name }}</h4>

                {% endif %}

                {% for catpost in item.posts %}

                    {% if item.name == 'Uncategorized' or item.name == 'Primary' %}

                    {% else %}

                     <li><a href="{{ catpost.link }}">{{ catpost.title }}</a></li>

                    {% endif %}


                {% endfor %}

            {% endfor %#}

        </div>

    </div>

 </div>
