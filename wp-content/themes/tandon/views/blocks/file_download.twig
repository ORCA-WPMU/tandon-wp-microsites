{% if block.files %}

<div id="files">

    {% include 'blocks/block-title.twig' %}

    {% for download in block.files %}

    <div class="row row-eq-height">

        <div class="col-xs-12 col-sm-4">

            <div class="content-block-download">

            <h3>{{ download.title }}</h3>

            </div>

        </div>

        <div class="col-xs-12 col-sm-8">

            <div class="content-block-download">

                {{ download.description }}

                <a href="{{ download.file.url }}" class="btn download" target="_blank" download> <i class="icon-in"></i> DOWNLOAD</a>

            </div>

        </div>

        <div class="spacer"></div>

    </div><!-- /.row -->

    {% endfor %}

</div>

{% endif %}
