<div id="instrument-list">

    <div class="container">

        <div class="container">

            <div class="row">

                {% include 'partial/block-title.twig' %}

            </div>

        </div>

        {% include 'partial/block-intro.twig' %}

        <div class="content-block">

            {% for tax in block.instrumentation_type %}

                {% for item in tax.taxonomy %}

                    {% if item.slug == 'metrology' %}

                    <div class="jumbotron">

                        <h4 class="mt-0 mb-4 d-inline-block">{{ item.name }}</h4>


                        {% if metrologyposts %}

                        <div class="show-more">

                            <ul class="list">

                            {% for post in metrologyposts|slice(0, 5) %}

                                {% if tax.single_post == 'true' %}

                                <li><a href="{{ post.link }}">{{ post.name }}</a></li>

                                {% else %}

                                <li>{{ post.content|striptags('<a>') }}</li>

                                {% endif %}

                                {% if loop.last %}{% else %}<hr class="my-3">{% endif %}

                            {% endfor %}

                            {% if metrologyposts|length > 5 %}

                                <div class="showmore">

                                {% for post in metrologyposts|slice(5, 20) %}

                                    {% if loop.first %}<hr class="my-3">{% else %}{% endif %}

                                        {% if tax.single_post == 'true' %}

                                        <li><a href="{{ post.link }}">{{ post.name }}</a></li>

                                        {% else %}

                                        <li>{{ post.content|striptags('<a>') }}</li>

                                        {% endif %}

                                    {% if loop.last %}{% else %}<hr class="my-3">{% endif %}

                                {% endfor %}

                                </div>

                                    <div class="row">

                                        <div class="col mt-5 mb-0">

                                            <h4 class="my-0"><a href="#0" class="show-more float-left fa">

                                              <i class="fa fa-chevron-down" aria-hidden="true"></i><span>Show More</span>

                                            </a></h4>

                                            {% if conferenceposts|length > 5 %}

                                                <h4 class="my-0"><a href="{{ site.link }}/instrument-types/{{item.name|sanitize}}" class="show-all float-right d-none">

                                                    <i class="fa fa-list-ul" aria-hidden="true"></i> See All

                                                </a></h4>

                                            {% endif %}

                                        </div>

                                    </div>


                            {% endif %}

                            </ul>

                        </div>

                        {% endif %}

                    </div>

                    {% endif %}

                {% endfor %}

                {% if loop.last %}{% else %}<div class="my-5"></div>{% endif %}

            {% endfor %}

            <!-- ///// dumps all categories and their posts ////// -->

            {#% for item in taxpost %}

                {% if item.name == 'Uncategorized' or item.name == 'Primary' %}

                {% else %}

                <h4>{{ item.name }}</h4>

                {% endif %}

                {% for catpost in item.posts %}

                    {% if item.name == 'Uncategorized' or item.name == 'Primary' %}

                    {% else %}

                     <li><a href="{{ catpost.link }}">{{ catpost.title }}</a></li>

                    {% endif %}


                {% endfor %}

            {% endfor %#}

        </div>

    </div>

 </div>
