<!doctype html>
<!--[if IE 9]><html class="no-js lt-ie10" {{ site.language_attributes }}> <![endif]-->
<!--[if gt IE 9]><!--><html class="no-js" {{ site.language_attributes }}> <!--<![endif]-->
<!--[if lte IE 8]>
<script type="text/javascript">
    if ( document.URL.indexOf( 'ie8' ) === -1 ) {
        window.location = 'http://' + location.hostname + '/ie8';
    }
</script>
<![endif]-->

<head>

    {% block head %}

    <meta charset="utf-8" />

    <title>{{wp_title}}</title>

    <meta name="description" content="{{site.description}}">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Fav and touch icons -->

    <link rel="apple-touch-icon" sizes="180x180" href="{{ theme.link }}/img/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="{{ theme.link }}/img/favicon/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="{{ theme.link }}/img/favicon/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="{{ theme.link }}/img/favicon/manifest.json">
    <link rel="mask-icon" href="{{ theme.link }}/img/favicon/safari-pinned-tab.svg" color="#fff">
    <link rel="shortcut icon" href="{{ theme.link }}/img/favicon.ico" type="image/vnd.microsoft.icon">
    <meta name="theme-color" content="#fff">

    {% endblock %}

    {{function('wp_head')}}

</head>

    <body class="{{body_class}}" data-source="base.twig">

        <div id="wrapper">

            {% block content %}

            {% set flex_blocks = flexblock %}

            {% include 'templates/sidebar-nav.twig' %}

            {% include 'templates/header.twig' %}

            {% include 'templates/hero.twig' %}

            {% include 'templates/about.twig' %}

            {% if flex_blocks %}

            {% include 'templates/flex-content.twig' with flex_blocks %}

            {% endif %}

            <div id="breaker">

            {% include 'templates/footer.twig' %}

            </div>

            {% endblock %}

            {{ function('wp_footer') }}

        </div><!-- /.wrapper -->

    </body>

</html>